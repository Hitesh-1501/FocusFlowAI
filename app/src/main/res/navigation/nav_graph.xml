<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/naviagtion"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.focusflowai.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.focusflowai.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_studentDashBoardFragment"
            app:destination="@id/studentDashBoardFragment" />
        <action
            android:id="@+id/action_loginFragment_to_fragmentInstructorDashBoard"
            app:destination="@id/fragmentInstructorDashBoard" />
    </fragment>
    <fragment
        android:id="@+id/studentDashBoardFragment"
        android:name="com.example.focusflowai.ui.student.home.StudentDashBoardFragment"
        android:label="fragment_student_dash_board"
        tools:layout="@layout/fragment_student_dash_board" >
        <action
            android:id="@+id/action_studentDashBoardFragment_to_learningFrament"
            app:destination="@id/learningFrament" />
    </fragment>
    <fragment
        android:id="@+id/learningFrament"
        android:name="com.example.focusflowai.ui.student.learning.LearningFrament"
        android:label="LearningFrament" >
        <action
            android:id="@+id/action_learningFrament_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.focusflowai.ui.student.quiz.QuizFragment"
        android:label="QuizFragment" />
    <fragment
        android:id="@+id/fragmentInstructorDashBoard"
        android:name="com.example.focusflowai.ui.instructor.dashboard.FragmentInstructorDashBoard"
        android:label="FragmentInstructorDashBoard" />


</navigation>